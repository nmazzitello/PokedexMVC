@using PokedexMVC.Models.Dto_ViewModel_
@model PokemonDto

<h1>Agregar pokemon</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="form-group">
				<label asp-for="Nombre" class="control-label"></label>
				<input asp-for="Nombre" class="form-control"/>
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="TipoId" class="control-label"></label>
				<select asp-for="TipoId" class="form-control" asp-items="ViewBag.nuevoPokemon"></select>
				<span asp-validation-for="TipoId" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" class="btn btn-primary mt-3" value="AGREGAR"/>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
